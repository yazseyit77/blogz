<%- include("partials/header") -%>

<h1>Blogs</h1>

<% blogs.forEach(blog => { %>
<div>
    <h2><%= blog.title %></h2>
    <img src="<%= blog.image %>" alt="">
    <span><%= blog.created %></span>
    <p><%= blog.body.substring(0, 100) %>...<a href="/blogs/<%= blog.id %>">Read more</a></p>

</div>
<% }) %>

<%- include("partials/footer") -%>